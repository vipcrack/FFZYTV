<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp" android:layout_height="180dp"
    android:orientation="vertical" android:padding="8dp"
    android:focusable="true" android:background="#33000000">
    <ImageView android:id="@+id/image" android:layout_width="match_parent"
        android:layout_height="135dp" android:scaleType="centerCrop"/>
    <TextView android:id="@+id/title" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textColor="#FFFFFF"
        android:maxLines="1" android:ellipsize="end" android:gravity="center"/>
    <TextView android:id="@+id/remark" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textColor="#AAAAAA"
        android:gravity="center"/>
</LinearLayout>
